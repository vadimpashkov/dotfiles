#! /bin/sh

FOLDER="$HOME/Pictures/Screenshots/%d-%m-%Y/"
FILE_NAME="%H-%M-%S.png"
OUTPUT="$FOLDER$FILE_NAME"

mkdir -p "$FOLDER"

case "$1" in
	"select")
		scrot "$OUTPUT" --select --line mode=edge -e --freeze 'xclip -selection clipboard -t image/png -i "$f"'
		;;
	"window")
		scrot "$OUTPUT" --focused --border -e --freeze 'xclip -selection clipboard -t image/png -i "$f"'
		;;
	*)
		scrot "$OUTPUT" --freeze
		;;
esac

notify-send "Screenshot taken"
