#! /bin/sh

FOLDER="$HOME/Pictures/Screenshots/$(date +%d-%m-%Y)/"
FILE_NAME="$(date +%H-%M-%S).png"
OUTPUT="$FOLDER$FILE_NAME"

mkdir -p "$FOLDER"

case "$1" in
	"select")
		scrot "$OUTPUT" --select --line mode=edge --freeze -e 'xclip -selection clipboard -t image/png -i "$f"' || exit
		;;
	"window")
		scrot "$OUTPUT" --focused --border --freeze -e 'xclip -selection clipboard -t image/png -i "$f"' || exit
		;;
	*)
		scrot "$OUTPUT" --freeze -e 'xclip -selection clipboard -t image/png -i "$f"' || exit
		;;
esac

notify-send "Screenshot taken"
